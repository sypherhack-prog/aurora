// Prisma Schema - PostgreSQL for Production
// Compatible with Vercel Postgres, Supabase, Neon, etc.

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
}

model User {
  id            String    @id @default(cuid())
  email         String    @unique
  name          String?
  password      String
  role          String    @default("USER") // Values: USER, ADMIN
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
  aiUsageCount  Int       @default(0)
  exportCount   Int       @default(0)
  lastExportDate DateTime?
  subscriptions Subscription[]
}

model Subscription {
  id          String      @id @default(cuid())
  userId      String
  user        User        @relation(fields: [userId], references: [id], onDelete: Cascade)
  plan        String      // Values: FREE, BASIC, PRO, ANNUAL
  status      String      @default("PENDING") // Values: PENDING, ACTIVE, EXPIRED, BLOCKED
  startDate   DateTime?
  endDate     DateTime?
  createdAt   DateTime    @default(now())
  updatedAt   DateTime    @updatedAt
  payments    Payment[]
}

model Payment {
  id              String       @id @default(cuid())
  subscriptionId  String
  subscription    Subscription @relation(fields: [subscriptionId], references: [id], onDelete: Cascade)
  amount          Int
  mvolaRef        String?
  phoneNumber     String?
  verifiedAt      DateTime?
  verifiedBy      String?
  createdAt       DateTime     @default(now())
}
